#!/bin/sh

menu="$(echo " Poweroff
 Reboot
󰍃 Logout
 Suspend
 Hibernate
 Lock" | wofi --dmenu -i)"

case $menu in
    *Poweroff*) systemctl poweroff;;
    *Reboot*) systemctl reboot;;
    *Logout*) hyprctl exit || riverctl exit || swaymsg exit;;
    *Suspend* ) systemctl suspend ;;
    *Lock*) swaylock -f -c 000000;;
    *Hibernate* ) systemctl hibernate;;
esac

