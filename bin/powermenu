#!/bin/sh

MENTRIES="$(echo " Poweroff
 Reboot
󰍃 Logout
 Suspend
 Hibernate
 Lock" | wofi --dmenu -i)"

MOPTIONS="$(echo $MENTRIES | awk '{print$2}' |tr '[:upper:]' '[:lower:]')"
echo $MOPTIONS

systemctl $MOPTIONS || ([ "$MOPTIONS" = "lock" ] && swaylock -f -c 000000)  || ([ "$MOPTIONS" = "logout" ] && hyprctl dispatch exit)
